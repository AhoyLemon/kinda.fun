main.general-stats(v-if="ui.viewing == 'general'")

  .inside

    .game-summaries

      .summary
        figure
          img(src="/svg/games/nomorebillionaires.svg" @click="getData('guillotine')")
        .last-played(v-if="stats.general && stats.general.lastPlayed && stats.general.lastPlayed.guillotine")
          .time-caption Last Game
          .time-ago(v-text="formatTime(stats.general.lastPlayed.guillotine,'fromNow')")
          .calendar(v-text="formatTime(stats.general.lastPlayed.guillotine,'calendar')")
        .button-holder
          button(@click="getData('guillotine')") Details

