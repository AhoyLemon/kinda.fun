.follower-change.container(:class="{ positive: change > 0, negative: change < 0 }")
  .point-holder(v-if="change")
    .number(:class="{ positive: change > 0, negative: change < 0 }") {{ change > 0 ? `+${change}` : change }}
  .text-holder
    .text
      .title.religion(v-if="religion") {{ religion }}
      .religion-label.label {{ change > 0 ? "followers gained" : "followers lost" }}