      .box.buttons(v-if="gameSettings.isDebugButtonVisible")
        .label(v-if="gameSettings.isDebug" style="color: hotpink;") CHEATS ARE ENABLED
        fieldset
          button.debug-toggle(@click="toggleDebugMode()" :class="{'active': gameSettings.isDebug}")
            template(v-if="gameSettings.isDebug")
              span ðŸŸ¢
              span Turn Debug Off 
            template(v-if="!gameSettings.isDebug")
              span âšª
              span Enable Debug

        fieldset.debug-controls(v-if="gameSettings.isDebug")
          legend Debug Controls
          button.trigger(@click="debugAddMoney()") +$1,000,000
          button.trigger(v-if="!my.chats.harold.hasContacted" @click="debugTriggerHarold()") Trigger Harold
          button.trigger(v-if="!my.hasVan" @click="debugGetVan()") Get Van
          button.trigger(v-if="!my.chats.sterling.hasContacted" @click="debugTriggerSterling()") Trigger Sterling
          button.trigger(v-if="!my.eternalLegacy.isActive" @click="debugTriggerEternalLegacy()") Trigger Legacy
          button.trigger(v-if="my.eternalLegacy.isActive" @click="debugAddHeat()") Add Heat (+10)
          button.toggle(@click="debugTriggerSpeedPreaching()" :class="{'active': ui.timing.toastDelayMin == 1 }") 
            template(v-if="ui.timing.toastDelayMin == 1")
              span Regular Preaching
            template(v-else)
              span Speed Preaching

