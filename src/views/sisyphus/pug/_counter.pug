.counters
  .score-hud.counter.pushes(v-if="ui.totalScore > 4" v-cloak)
    .label Pushes
    .count(v-text="addCommas(ui.score)")

  .score-hud.counter.gamerscore(v-if="computedGamerScore" v-cloak)
    .label Score
    .count
      button(
        @click="remindMeOfMyCheevos()"
        title="Remind me of the cheevos I've earned"
      ) {{computedGamerScore}}