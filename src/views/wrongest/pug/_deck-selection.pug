.pregame.deck-selection(v-if="game.inRoom && !game.gameStarted && ui.showingDeckSelection")

  .room-code
    .label Your room code
    .display {{game.roomCode}}
    .how-to-share Share this URL to invite your friends to play.

  .deck-selection-main
    .inside
      
      h1 Choose Your Decks

      .deck-list
        .deck-item(v-for="deck in game.allDecks" :key="deck.id" :class="{ 'selected': game.selectedDeckIds.includes(deck.id), 'naughty': deck.isNaughty }")
          .deck-checkbox
            input(
              type="checkbox" 
              :id="'deck-' + deck.id" 
              :value="deck.id"
              :checked="game.selectedDeckIds.includes(deck.id)"
              @change="toggleDeck(deck.id)"
            )
            label(:for="'deck-' + deck.id")
              .deck-header
                .deck-name {{deck.name}}
                .deck-card-count
                  span.number {{deck.cards ? deck.cards.length : 0}}
                  span.label cards
              .deck-description {{deck.description}}
              .deck-tag(v-if="deck.isNaughty")
                span ðŸ”ž Adult Content
      
      .button-holder
        button.cancel-button(type="button" @click="ui.showingDeckSelection = false") Cancel
        button.save-decks-button(
          type="button" 
          @click="saveDeckSelection()" 
          :disabled="!computedHasEnoughCards"
        ) 
          span(v-if="computedHasEnoughCards") Save Deck Selection
          span(v-else) Select More Decks
        
        

