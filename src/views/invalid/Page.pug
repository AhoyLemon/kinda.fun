include ../../shared/pug/_variables.pug
- const name = "Invalid"
- const desc = "A trivia game of unnecessary suffering."

doctype html
html(lang="en")
  head
    include ../../shared/pug/_meta.pug
    link(rel="canonical" href=baseUrl + "/cameo")

    // Fonts & CSS
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Big+Shoulders:opsz,wght@10..72,100..900&family=Lora:ital,wght@0,400..700;1,400..700&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet")
    link(href="/invalid.css?lastUpdated="+lastUpdated type="text/css" rel="stylesheet")

    // Favicons
    link(rel="apple-touch-icon" sizes="180x180" href="/img/invalid/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/img/invalid/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/img/invalid/favicon-16x16.png")
    link(rel="shortcut icon" href="/img/invalid/favicon.ico")

    // OpenGraph
    meta(property="og:title" content=name)
    meta(property="og:type" content="website")
    meta(property="og:image:width" content="1200")
    meta(property="og:image:height" content="630")
    meta(property="og:description" content=desc)
    meta(property="og:url" content=baseUrl + "/invalid")
    meta(property="og:image" content=baseUrl + "/img/og-invalid.png")
    meta(property="og:email" content=email)

  body
    #app
    script(type="module" src="/src/entries/invalid.js")

    script(type="application/ld+json")
      include json/schema.json
